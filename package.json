{
  "name": "cofb-testing-suite",
  "version": "1.0.0",
  "description": "Professional testing suite for Foodbank Check-In and Appointment System - Agile Development",
  "main": "test-runner.js",
  "scripts": {
    "test": "node test-runner.js",
    "test:unit": "node tools/unit-tests.js",
    "test:integration": "node tools/integration-tests.js",
    "test:performance": "node tools/performance-tests.js",
    "test:e2e": "node tools/e2e-tests.js",
    "test:report": "node tools/generate-report.js",
    "postman": "newman run postman/COFB-API-Tests.postman_collection.json",
    "coverage": "node tools/coverage-report.js",
    "perf:api": "node scripts/test-performance.js",
    "perf:bundles": "node scripts/check-bundle-sizes.js",
    "perf:all": "npm run perf:bundles && npm run perf:api"
  },
  "devDependencies": {
    "newman": "^6.0.0",
    "newman-reporter-html": "^1.0.5",
    "newman-reporter-htmlextra": "^1.22.11",
    "artillery": "^2.0.0",
    "k6": "^0.0.0"
  },
  "keywords": ["testing", "agile", "api", "performance", "food-bank"],
  "author": "Lindsey D. Stead / Lifesaver Technology Services",
  "license": "UNLICENSED"
}
